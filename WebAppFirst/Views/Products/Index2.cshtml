@model IEnumerable<WebAppFirst.Models.Products>
@{
    ViewBag.Title = "Index2";
}
@section scripts {

    <script type="text/javascript">
        $(function () {
            $(".showProductId").click(function () {
                var productId = $(this).data("productid"); @*data-productId="@prod.ProductID"*@
                alert(productId);
            });
        });

        $(function () {
            $("#poistaTuote").click(function () {
                var productId = $(this).data("productid");
                alert(productId);
            });
        });
    </script>

}
<div class="container-fluid"
<h2>Index</h2>
<h4>Tuotteita @Model.Count() kappaletta</h4>


    <div class="row"></div>
        @foreach (WebAppFirst.Models.Products prod in Model)
        {
          <div class="col-lg-3">
              <h3 class="card-header">@prod.ProductName</h3>
              <div class="card-body">
                  <h5 class="card-title">@prod.QuantityPerUnit</h5>
                  <h6 class="card-subtitle text-muted">@prod.UnitsInStock</h6>
              </div>
              <svg src=@prod.ImageLink width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                  <rect width="100%" height="100%" fill="#868e96"></rect>
                  <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
              </svg>
              <ul class="list-group list-group-flush">
                  <li class="list-group-item">@prod.UnitPrice</li>
                  <li class="list-group-item">@prod.UnitsOnOrder</li>
                  <li class="list-group-item">@prod.ReorderLevel</li>
              </ul>
              <div class="card-body">
                  <a href="#" class="card-link">Card link</a>
                  <a href="#" class="card-link">Another link</a>
              </div>
          </div>
        }
</div>

<script>
    function naytaValittuTuote(tuoteID) {
        alert(tuoteID);
    }
</script>

